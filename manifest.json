{
  "name": "HTML5 Outliner",
  "short_name": "h5o",
  "manifest_version": 2,
  "description": "Generates a navigable page outline with heading and sectioning elements",
  "icons": {
    "48": "img/48.png",
    "128": "img/128.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "outliner.min.js",
        "createOutline.js"
      ]
    }
  ],
  "commands":
    {
        "_execute_page_action":
        {
            "suggested_key":
            {
                "default": "Ctrl+I",
                "chromeos": "Ctrl+I",
                "linux": "Ctrl+I",
                "mac": "MacCtrl+I",
                "windows": "Ctrl+I"
            }
        }
    },
  "page_action": {
    "default_icon": "img/16.png",
    "default_title": "Outline",
    "default_popup": "popup.html"
  }
}
