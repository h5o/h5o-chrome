{
  "name": "HTML5 Outliner",
  "short_name": "h5o",
  "manifest_version": 2,
  "description": "Generates a navigable page outline with heading and sectioning elements",
  "icons": {
    "48": "img/48.png",
    "128": "img/128.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "outliner.min.js",
        "createOutline.js"
      ]
    }
  ],
  "page_action": {
    "default_icon": "img/16.png",
    "default_title": "Outline",
    "default_popup": "popup.html"
  },
  "commands": {
    "_execute_page_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "windows": "Alt+Shift+P",
        "mac": "Alt+Shift+P"
      }
    }
  }
}
